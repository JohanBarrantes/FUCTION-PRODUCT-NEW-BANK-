{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["node"],
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
  },
  "include": ["src/**/*.ts"]
}
